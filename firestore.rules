rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read games, even if not logged in
    match /games/{gameId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'moinulbd.sk@gmail.com';
    }
    
    // Allow users to read/write their own profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Explicitly allow listing the games collection
    match /games {
      allow read: if true;
    }
  }
}